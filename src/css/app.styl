border-color = #ccc
border-width = 1px
true_blue = #003399
true_green = #669933
fake_green = #eff2e3
amber = color rgb(255,191,0)



body
  color: #333333;

a:focus
  color: #fff

#main
  padding-top 120px

#wrap
  background: #ffffff; /* Old browsers */
  background: -moz-linear-gradient(top, #ffffff 0%, #eff2e3 90%, #ebfcd9 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(90%,#eff2e3), color-stop(100%,#ebfcd9)); /* Chrome,Safari4+ */
