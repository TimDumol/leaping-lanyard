border-color = #ccc
border-width = 1px

#main
  margin-top 120px

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none

footer
  border-top 1px solid #ccc
  margin-top 5em
  padding-top 1em

ul.errands
  list-style-type none
.errand
  position relative
  display block
  border border-width solid border-color
  width 300px
  height 225px
  float left
  margin 12px 12px 12px 0
  padding 10px
  box-sizing border-box
  .desc
    position absolute
    bottom 0
    left 0
    right 100%
    height 60px
    width 100%
    border-color #eee
    border-top border-width solid border-color
    box-sizing border-box
    padding 10px
      
#home-page
  display table
  .content
    display table-cell
    box-sizing border-box
    padding 10px
  .sidebar
    display table-cell
    padding 10px
    border-left border-width solid border-color
    box-sizing border-box
  .search-bar
    padding 10px 0
    border-bottom border-width solid border-color

#location-map
  width 500px
  height 300px

header.navbar 
  .container
    display table
    .wrapper
      height 100%
      width 800px
      display table-cell
      vertical-align middle
      overflow hidden
  i
    font-size 32px
  i.icon-facebook-sign
    font-size 18px
