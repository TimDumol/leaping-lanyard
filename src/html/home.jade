#home-page.row(ng-controller='HomeLoggedInCtrl', ng-if='CurrentUser.loggedIn()')
  .span12.row
    form.form-search
      .input-append
        input(type='text', ng-model='searchText', placeholder='Search for errands').search-query.input-medium
    button.btn.pull-right
      i.icon-location-arrow
      |  Set your location
  ul.span12.row.errands
    li(ng-repeat='errand in filteredErrands')
      div(rs-errand, errand="errand", user="CurrentUser", run="run(errandId)")
#home-page.row(ng-controller='HomeAnonCtrl', ng-if='!CurrentUser.loggedIn()')
  .search-bar.span12.row
    p Need to run an errand? Laundry ? Printing? Find a runner now!
    a.btn(ng-href='logIn()') Sign up now!
  ul.errands
    li(ng-repeat='errand in sampleErrands').errand
      div(style='background-image: {{errand.photo}}')
        .desc
          div {{ errand.title }}
          div
            div
              span Average Price: 
              | PHP {{ errand.price | number:2 }}
