#home-page.row(ng-controller='HomeAnonCtrl', ng-if='!CurrentUser.loggedIn()')
  .search-bar.span12.row
    p Need to run an errand? Laundry ? Printing? Find a runner now!
    a.btn.btn-danger(ng-click='logIn()') Sign up now!
  ul.errands
    li(ng-repeat='errand in sampleErrands').errand
      div(style='background-image: {{errand.photo}}')
        .desc
          div {{ errand.title }}
          div
            div
              span Average Price: 
              | PHP {{ errand.price | number:2 }}
