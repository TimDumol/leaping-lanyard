#my-errands.row
  .span8.content(ng-controller='ErrandCreationCtrl')
    form.span8.search-bar.row(ng-submit='submit()')
      div
        label
          | Title 
        input(type='text', ng-model='errand.title', required)
      div
        label
          | Body 
        textarea(ng-model='errand.body', required)
      div
        label
          | Deadline
        input(type='text', ng-model='errand.deadline', required)
      div
        label
          | Location
        input(type='text', ng-model='errand.location', required)
      #location-map
         
      div
        label
          | Price
          input(type='text', ng-model='errand.price', required)
      div
        button(type='submit') Submit
    ul.span8.row.errands
      li(ng-repeat='errand in errands').errand
        div {{ errand.title }}
        div
          .icon-money
          |  PHP {{ errand.price | number:2 }}
        div
          .icon-location-arrow
          |  {{ errand.location }}
        div
          {{ errand.body }}
  .span4.sidebar
    p bar
