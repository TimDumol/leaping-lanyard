html(ng-app="tamad")
  head
    title Courier Collie

    meta(charset='utf8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')

    - var lib_styles = ['bootstrap/css/bootstrap.css', 'bootstrap/css/bootstrap-responsive.min.css', 'toastr/toastr.min.css', 'font-awesome/css/font-awesome.min.css', 'angular-ui/angular-ui.min.css', 'select2/select2.css']
    each style in lib_styles
      link(rel='stylesheet', href='/lib/' + style)
    link(rel='stylesheet', href='/css/app.css')

  body(ng-controller="SessionCtrl")
    noscript
      div Javascript must be enabled in order to use Courier Collie
    .ng-cloak     
      header.navbar.navbar-fixed-top
        .navbar-inner
          .container
            button.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.brand(href='/#/') Courier Collie
            ul.nav
              li
                a(href='/#/')
                  .icon-home
                  |  Home
              li
                a(href='/#/my-errands')
                  .icon-meh 
                  |  My Errands
              li
                a(href='/#/accepted-errands')
                  .icon-smile
                  |  Accepted Errands
            .pull-right
              .progress
                .bar#progress-bar
                #progress-text
            .pull-right(ng-hide='CurrentUser.loggedIn()')
              form.navbar-form.btn-group
                // will style later
                a.btn(ng-click='logIn()') Login With Facebook
            .pull-right(ng-show='CurrentUser.loggedIn()')
              a(href="/#/profile").btn
                i.icon-user
              |  
              a.btn(ng-click='logOut()') Log out
                .nav-collapse.collapse
      #main(role='main').container
        #content(ng-view)

    - var libs = ['jquery-1.9.1.js', 'angular/angular.min.js', 'angular/angular-resource.min.js', 'bootstrap/js/bootstrap.min.js', 'toastr/toastr.js', 'underscore-min.js', 'underscore.string.min.js', 'angular-ui/angular-ui.min.js', 'select2/select2.min.js']
    each lib in libs
      script(src='/lib/' + lib)
    - var scripts = ['app.js', 'routes.js', 'home.js', 'errands.js', 'auth.js', 'profile.js', 'facebook.js', 'resources.js']
    each script in scripts
      script(src='/js/' + script)
